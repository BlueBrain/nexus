include ../mixins/productsList.pug
include ../mixins/useCasesList.pug
include ../mixins/gettingStartedList.pug
include ../mixins/devList.pug

mixin mobileMenu
  button(
    id="menu-icon"
    class="menu-button-mobile"
  )
    img(
      src="../img/icons/menuIcon.svg"
      alt="mobile menu button"
    )
  div.gradient(
    id="menu-container"
  )
    button(
      id="menu-close-button"
    )
      img(
        src="../img/icons/closeIcon.svg"
      )
    ul
      li(
        class="menu-item"
      )
        button(
          id="products-button"
          class="menu-item-button"
        ) Products
        div(id="products-submenu")
          +productsList("mobile")
      li(
        class="menu-item"
      )
        button(
          id="getting-started-button"
          class="menu-item-button"
        ) Getting started
        div(id="getting-started-submenu")
          +gettingStartedList("mobile")
      li(
        class="menu-item"
      )
        button(
          id="dev-button"
          class="menu-item-button"
        ) Developers
        div(id="dev-submenu")
          +devList("mobile")