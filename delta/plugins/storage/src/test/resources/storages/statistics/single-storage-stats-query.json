{
  "query": {
    "bool": {
      "filter": [
        {
          "term": {
            "@type.short": "File"
          }
        },
        {
          "term": {
            "project": "org/proj"
          }
        },
        {
          "term": {
            "storage": "https://bluebrain.github.io/nexus/vocabulary/diskStorageDefault"
          }
        }
      ]
    }
  },
  "aggs": {
    "storageSize": {
      "sum": {
        "field": "bytes"
      }
    },
    "filesCount": {
      "sum": {
        "field": "newFileWritten"
      }
    }
  },
  "size": 0
}