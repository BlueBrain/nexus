{
  "query": {
    "nested": {
      "path": "relationships",
      "query": {
        "term": {
          "properties.@id": "{resource_id}"
        }
      }
    }
  },
  "script": {
    "source": "for (prop in ctx._source.relationships) {if(prop['@id'] == params.id) {prop['@type'] = params.types; } }",
    "lang": "painless",
    "params": {
      "id": "{{resource_id}}",
      "types": [ {{{resource_types}}} ]
    }
  }
}